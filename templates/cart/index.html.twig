{% extends 'base.html.twig' %}

{% block title %}Siroko Cart{% endblock %}

{% block body %}
<div class="container">
    <div class="row" id="cart" data-cart="">
        <div class="col-md-6">
            <h2>Products</h2>
            <div id="products-container">
              <!-- Los productos se cargarán aquí -->
            </div>
        </div>
        <div class="col-md-6">
            <h2>Your Cart</h2>
            <ul class="list-group" id="cart-items">
                <!-- Cart items will be dynamically added here -->
            </ul>
            <h4 class="mt-3">Total: <span id="total-price">0.00€</span></h4>
            <h4 class="mt-3">Total Items: <span id="total-items">0</span></h4>
            <button class="btn btn-success mt-3" id="checkout">Checkout</button>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="{{ asset('js/scripts.js') }}"></script>
{% endblock %}